extends layout

block content
  title = "Argonaut Client Demo"
  nav(class="navbar navbar-default navbar-static-top")
    div(class="container")
      div(class="navbar-header")
        button(type="button",class="navbar-toggle collapsed",data-toggle="collapse",data-target="#navbar",aria-expanded="false",aria-controls="navbar")
          span(class="sr-only") Toggle navigation
          span(class="icon-bar")
          span(class="icon-bar")
          span(class="icon-bar")
        a(class="navbar-brand",href="/") Argonaut Client Demo
      div(id="navbar",class="navbar-collapse collapse")
        ul(class="nav navbar-nav navbar-right")
          if loggedIn
            li
              a(href="/settings") Settings
          li
            if loggedIn
              a(href="/logout") Logout
            else
              a(href="/login") Login
  div(class="col-sm-12 landing-panel")
    div.row
      h1(class="col-sm-offset-1 col-sm-10") Isabella's Medications
    div.row
      div(class="col-sm-10 col-sm-offset-1")
        div(class="panel panel-default landing-login")
          table(class='table table-hover table-bordered table-striped table-condensed')
            thead
              tr
                th Medication
                //th Status
            tbody
              each medication in medications
                tr
                  td #{medication.name}
    div(class="text-center col-md-12 footer hidden-print")
      div.row
        h6 Made by Amida Technology Solutions | Licensed under Creative Commons